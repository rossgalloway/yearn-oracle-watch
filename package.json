{
  "name": "yearn-oracle-watch",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changeset:release": "bun run build && changeset publish",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "preinstall": "npx only-allow bun",
    "dev": "bun run --filter ./packages/app start",
    "dev:watch": "concurrently \"bun run --filter ./packages/sdk watch\" \"bun run dev\"",
    "build:contracts": "bun run --filter ./packages/contracts build",
    "build:sdk": "bun run --filter ./packages/sdk build",
    "build:deps": "bun run build:contracts && bun run build:sdk",
    "build:gen": "bun run --filter ./packages/contracts codegen && bun run --filter ./packages/sdk codegen",
    "build:app": "bun run --filter ./packages/app build",
    "build": "bun run build:gen && bun run build:deps && bun run build:app",
    "build:debug": "echo 'Starting codegen...' && bun run build:gen && echo 'Codegen complete. Starting deps build...' && bun run build:deps && echo 'Deps complete. Checking files...' && ls -la packages/contracts/dist/ && ls -la packages/sdk/dist/ && echo 'Starting app build...' && bun run build:app",
    "format-and-lint": "bun run --filter \"./packages/*\" format-and-lint",
    "lint:types": "bun run --filter \"./packages/*\" lint:types",
    "test": "bun run --filter \"./packages/*\" test",
    "start:app": "bun run --filter ./packages/app start",
    "clean": "rm -rf node_modules packages/**/node_modules packages/**/build packages/**/dist packages/contracts/src/wagmi.ts"
  },
  "dependencies": {
    "@tanstack/query-core": "^5.80.2",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@wagmi/core": "^2.17.2",
    "abitype": "^1.0.7",
    "date-fns": "^4.1.0",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "numbro": "^2.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.33.2",
    "wagmi": "^2.15.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tanstack/react-query": "^5.80.6",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/react-transition-group": "^4.4.11",
    "@vitejs/plugin-react": "^4.3.4",
    "@wagmi/cli": "^2.3.1",
    "autoprefixer": "^10.4.20",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "postcss": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-static-copy": "^2.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.8"
  }
}
