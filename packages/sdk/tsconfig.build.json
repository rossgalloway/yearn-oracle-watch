{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "types": ["vite/client", "node"],
    "paths": {
      "@yearn-oracle-watch/contracts": ["../contracts/dist/wagmi"]
    }
  }
}
