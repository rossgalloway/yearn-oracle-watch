{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Project References */
    "composite": false,
    "declarationMap": true,
    "declaration": true,

    /* Paths */
    "paths": {
      "@yearn-oracle-watch/contracts": ["./packages/contracts/src"],
      "@yearn-oracle-watch/contracts/*": ["./packages/contracts/src/*"],
      "@yearn-oracle-watch/sdk": ["./packages/sdk/src"],
      "@yearn-oracle-watch/sdk/*": ["./packages/sdk/src/*"]
    }
  },
  "references": [
    { "path": "./packages/contracts" },
    { "path": "./packages/sdk" },
    { "path": "./packages/app" }
  ]
}